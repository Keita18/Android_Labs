<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_D_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:padding="20dp"
        android:text="@string/activity_4"/>

    <Button
        android:id="@+id/activity_D_toA_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/to_first"
        android:padding="30dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/activity_D_toB_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/to_second"
        android:padding="30dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/activity_D_toC_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/to_third"
        android:padding="30dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>